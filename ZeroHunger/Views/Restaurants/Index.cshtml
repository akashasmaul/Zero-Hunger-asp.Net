
@{
    ViewBag.Title = "Index";
}

<div>
    <div class="text-center">
        <h1>RESTAURANTS</h1><br />
    </div>

    <table class="table table-striped table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Location</th>
            <th class="text-center">Total Requests</th>
            <th class="text-center">Pending / Not Collected</th>
            <th class="text-center" colspan="2">Action</th>
        </tr>

        @foreach (var item in Model)
        {
            var pending = item.Requests.Count - item.Histories.Count;
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Location</td>
                <td class="text-center">@item.Requests.Count</td>
                <td class="text-center">@pending / 10</td>
                <td class="text-center"><a href="/Restaurants/MakeRequest/@item.Id" class="btn btn-primary">New Requests</a></td>
                <td class="text-center"><a href="/Restaurants/ViewRequests/@item.Id" class="btn btn-primary">View All Requests</a></td>
            </tr>
        }
    </table>
</div>

