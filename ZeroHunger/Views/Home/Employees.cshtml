
@{
    ViewBag.Title = "Employees";
}

<div>
    <h1 class="text-center">EMPLOYEES</h1><br />
    <table class="table table-striped table-bordered">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th>Gender</th>
            <th class="text-center" colspan="2">Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Age</td>
                <td>@item.Sex</td>
                <td class="text-center"><a href="/home/UpdateEmployee/@item.Id" class="btn btn-primary">Update Details</a></td>
                <td class="text-center"><a href="/home/DeleteEmployee/@item.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </table>
</div>