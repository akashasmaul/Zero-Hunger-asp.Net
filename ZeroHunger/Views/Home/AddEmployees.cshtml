
@{
    ViewBag.Title = "AddEmployees";
}

<div class="row d-flex justify-content-center">
    <form method="post" id="login" class="col-md-6">
        <h2 class="text-center">Add Employees</h2>
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter employee name here" value="@(Model==null ? "":Model.Name)">
            <span class="text-danger">@Html.ValidationMessage("Name")</span>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email address here">
            <span class="text-danger">@Html.ValidationMessage("email")</span>
        </div>
        <div class="form-group">
            <label for="age">Age</label>
            <input type="text" class="form-control" id="age" name="age" placeholder="Enter age here">
        </div>
        <label for="gender"> Gender</label>
        <select name="gender" class="form-control" id="gender">
            <option value="none" selected>Select Gender...</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
        </select>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Add Employee</button>
        </div>
    </form>
</div>

